<?xml version="1.0" encoding="UTF-8"?>
<templates id="template" xml:space="preserve">
    <t t-name="pos_marked_products.ProductItem" t-inherit="point_of_sale.ProductItem" t-inherit-mode="extension">
        <xpath expr="//article[hasclass('product')]" position="attributes">
            <attribute name="t-att-class" add="props.product.is_marked ? 'marked-product' : ''" separator=" "/>
        </xpath>
    </t>
</templates>